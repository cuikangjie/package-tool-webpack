{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",

    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,

    "lib": ["ESNext"]
  },
  "include": ["src"]
}
